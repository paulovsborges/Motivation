<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <View
        android:id="@+id/bar_menu"
        android:background="#8C0089"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        />
    <ImageView
        android:id="@+id/infinity"
        android:padding="4dp"
        android:layout_marginLeft="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_infinity"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/happy"
        android:padding="4dp"
        app:tint="@color/white"
        android:layout_marginLeft="180dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_happy"/>

    <ImageView
        android:id="@+id/sun"
        android:padding="4dp"
        app:tint="@color/white"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_sun"/>

    <TextView
        android:id="@+id/text_name"
        android:layout_below="@+id/bar_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello, world"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/text_phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="frase"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="25sp"
        android:layout_margin="16dp"
        android:textAlignment="center"
        />
    <View
        android:layout_marginTop="32dp"
        android:background="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_phrase"
        android:layout_width="128dp"
        android:layout_height="2dp"/>

    <Button
        android:id="@+id/button_new_phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Nova frase"
        android:layout_marginBottom="70dp"
        android:background="@drawable/ripple_button"
        />

</RelativeLayout>